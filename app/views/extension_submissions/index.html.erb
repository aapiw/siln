<div class="content mt-3">
  <div class="animated fadeIn">
      <div class="row">

      <div class="col-md-12">
          <div class="card">
              <div class="card-header">
                  <strong class="card-title">DAFTAR PENGAJUAN PERPANJANGAN TUGAS</strong>
              </div>
              <div class="card-body">
                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>No</th>
                      <th>Tahun</th>
                      <th>Status</th>
                      <% if current_school.admin %>
                        <th>Sekolah</th>
                      <% end %>
                      <th>Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @extension_submissions.each_with_index do |extension_submission, index| %>
                    <tr>
                      <td><%=index+1 %></td>
                      <td><%= extension_submission.year %></td>
                      <td><%= extension_submission.status %></td>
                      <% if current_school.admin %>
                        <td><%= extension_submission.school.name %></td>
                      <% end %>
                      <td>
                        <% if current_school.admin %>
                          <%= link_to "Lihat", school_path(extension_submission.school, year:extension_submission.year, extention:true) , target:"_blank", class:"btn btn-primary" %>
                          <%= link_to "Upload", edit_school_extension_submission_path(extension_submission.school.id, extension_submission, year:extension_submission.year ) , target:"_blank", class:"btn btn-primary" %>
                        <% else %>
                          <%= link_to "Lihat", edit_school_extension_submission_path(extension_submission.school.id, extension_submission, year:extension_submission.year), target:"_blank", class:"btn btn-primary" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
          </div>
            <%= link_to 'Pengajuan Perpanjangan Baru', new_school_extension_submission_path(current_school.id, year:ExtensionSubmission.next_year), class:"btn btn-primary" unless current_school.admin %>
      </div>


      </div>
  </div><!-- .animated -->
</div><!-- .content -->
