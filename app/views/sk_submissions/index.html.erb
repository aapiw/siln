
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">DAFTAR PENGAJUAN SK</strong>
                </div>
                <div class="card-body">
                  <table id="data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Tahun</th>
                        <% if current_school.admin %>
                          <th>Sekolah</th>
                        <% end %>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @sk_submissions.each_with_index do |sk_submission, index| %>
                      <tr>
                        <td><%=index+1 %></td>
                        <td><%= sk_submission.year %></td>
                        <% if current_school.admin %>
                            <td><%= sk_submission.school.name %></td>
                        <% end %>
                          <td>
                        <% if current_school.admin %>
                          <%= link_to "Lihat", school_path(sk_submission.school.id, year:sk_submission.year, sk:true) , target:"_blank", class:"btn btn-primary" %>
                        <% else %>
                          <%= link_to "Lihat", edit_school_sk_submission_path(current_school.id, sk_submission), target:"_blank", class:"btn btn-primary" %>
                          </td>
                        <% end %>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
              <%= link_to 'Pengajuan SK Baru', new_school_sk_submission_path(current_school.id, year:SkSubmission.next_year), class:"btn btn-primary" unless current_school.admin %>
        </div>


        </div>
    </div><!-- .animated -->
</div><!-- .content -->