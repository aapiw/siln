<%= render 'form', sk_submission: @sk_submission %>
  <div class="content mt-3">
    <div class="animated fadeIn">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <strong class="card-title">DAFTAR PENGAJUAN SK</strong>
            </div>
            <div class="card-body">
              <table id="data-table" class="table table-striped table-bordered">
                <thead>
                  <tr>
                  	<th>Guru</th>
                  	<th>Status</th>
                  	<th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                	<% if @teachers_based_on_year.present? %>
                		<% @teachers_based_on_year.each do |sk|  %>
		                	<tr>
		                		<td><%= sk.teacher.name %></td>
		                		<td><%= sk.status %></td>
		                		<td><%= link_to "lihat", teacher_path(sk.teacher), class:"btn btn-primary" %></td>
		                	</tr>
                		<% end %>
                	<% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>