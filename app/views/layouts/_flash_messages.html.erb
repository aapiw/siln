<% if flash.present? %>
	<% flash.each do |key, value| %>
		<% color = {alert:"danger", notice:"success" } %>
		<div class="sufee-alert alert with-close alert-<%=color[key.to_sym] %> alert-dismissible fade show mt-2">
		  <% if value.respond_to? :each %>
			  <ul>
				  <% value.each do |message| %>
				  	<li><%= message %></li>
				  <% end %>
			  </ul>
		  <% else %>
			  	<%= value %>
			 <% end %>
	    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
	      <span aria-hidden="true">Ã—</span>
	  	</button>
		</div>
	<% end %>
<% end %>
