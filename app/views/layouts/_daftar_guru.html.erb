
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">DAFTAR PERMOHONAN GURU</strong>
                </div>
                <div class="card-body">
                  <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>PNS</th>
                        <th>Masa mengajar</th>
                        <th>Banyaknya perpanjangan</th>
                        <th>Masa berlaku</th>
                        <th>Usia</th>
                        <!-- <th>Status SK</th> -->

                        <!-- <th>Ceklis verifikasi SK mendikbud</th> -->
                        <!-- <th>Ceklis upload SK mendikbud</th> -->
                        <!-- <th>Ceklis verifikasi perpanjangan masa tugas</th> -->
                        <th>SK</th>
                        <th>Perpanjangan</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @teachers.each_with_index do |teacher, index| %>
                      <tr>
                        <td><%=index+1 %></td>
                        <td><%= teacher.name %></td>
                        <td><%= teacher.print_pns %></td>
                        <td><%= teacher.period_of_teaching %></td>
                        <td><%= teacher.number_of_extension %></td>
                        <td><%= teacher.expire.strftime('%d/%m/%Y') %></td>
                        <td><%= teacher.age %></td>
                        <!-- <td><%#= teacher.status_sk %></td> -->
                        <% unless teacher.pns %>
                            <td>
                                <% if teacher.sks.present? %>
                                    <% teacher.sks.each do |sk| %>
                                    <table>
                                        <tr>
                                            <td>
                                                <a href="<%= edit_teacher_sk_path(teacher, sk) %>" class="btn btn-primary mb-1 " target="blank">Lihat SK <%= sk.year %></a>
                                            </td>
                                            <td><%= sk.approved_by_admin %></td>
                                            <td><%= sk.sk_url %></td>
                                        </tr>
                                    </table>
                                    <% end %>
                                <% else %>
                                  <a href="<%= new_teacher_sk_path(teacher) %>" class="btn btn-primary " target="blank">Ajukan SK</a>
                                <% end %>                        
                            </td>
                            <td>
                                <!-- approved_by_admin -->
                                <% if teacher.extension_of_tasks.present? %>
                                    <% teacher.extension_of_tasks.each do |ext| %>
                                    <table>
                                        <tr>
                                            <td>
                                                <a href="<%= edit_teacher_extension_of_task_path(teacher, ext) %>" class="btn btn-primary" target="blank">Lihat Perpanjangan</a>
                                            </td>
                                            <td><%= ext.approved_by_admin %></td>
                                    <% end %>
                                        </tr>
                                    </table>
                                <% else %>
                                    <a href="<%= new_teacher_extension_of_task_path(teacher) %>" class="btn btn-primary" target="blank">Ajukan Perpanjangan</a>
                                <% end %>
                            </td>
                            <% else %>
                            <td></td>
                            <td></td>
                        <% end %>
                      </tr>
                     <% end %>
