<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>School</th>
      <th>Sk submission</th>
      <th>Name</th>
      <th>Pns</th>
      <th>Age</th>
      <th>Period of teaching</th>
      <th>Number of extension</th>
      <th>Expire</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.school %></td>
        <td><%= teacher.sk_submission %></td>
        <td><%= teacher.name %></td>
        <td><%= teacher.pns %></td>
        <td><%= teacher.age %></td>
        <td><%= teacher.period_of_teaching %></td>
        <td><%= teacher.number_of_extension %></td>
        <td><%= teacher.expire %></td>
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

