 <div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">DAFTAR GURU</strong>
                </div>
                <div class="card-body">
                  <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>PNS</th>
                        <th>Masa mengajar</th>
                        <th>Banyaknya perpanjangan</th>
                        <th>Masa berlaku</th>
                        <th>Usia</th>
                        <th>Ceklis verifikasi SK mendikbud</th>
                        <th>Ceklis upload SK mendikbud</th>
                        <th>Ceklis verifikasi perpanjangan masa tugas</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @teachers.each_with_index do |teacher,index| %>
                      <tr>
                        <td><%=index+1 %></td>
                        <td><%= teacher.name %></td>
                        <td><%= teacher.print_pns %></td>
                        <td><%= teacher.period_of_teaching %></td>
                        <td><%= teacher.number_of_extension %></td>
                        <td><%= teacher.expire.strftime('%d/%m/%Y') %></td>
                        <td><%= teacher.age %></td>
                        <td><%=  %></td>
                        <td><%=  %></td>
                        <td><%=  %></td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
        </div>
    </div><!-- .animated -->
</div><!-- .content -->