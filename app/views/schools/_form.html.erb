<div class="content mt-3">
  <div class="animated fadeIn">
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
              <div class="card-header">
                  <strong class="card-title">TAMBAH SEKOLAH</strong>
              </div>
              <div class="card-body card-block">
                <%= form_with(model: school, local: true, html:{}) do |form| %>
                  <div class="form-group">
                    <label class="form-control-label">Nama Sekolah</label>
                    <%= form.text_field :name, required:true, placeholder:"Nama Sekolah", class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <label class="form-control-label">Penanggung Jawab Sekolah</label>
                    <%= form.text_field :responsible_school, placeholder:"Penanggung Jawab Sekolah", class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <label class=" form-control-label">Nomor Telepon Sekolah</label>
                    <%= form.number_field :phone, min:0, placeholder:"Nomor Telepon Sekolah", class:"form-control" %>
                  </div>

                  <div class="form-group">
                    <label  class="form-control-label">Negara</label>
                    <%= form.select(:country_id, Country.all.collect {|c| [ c.name, c.id ] }, {}, id:"", class:"form-control form-control--z-5 show-tick", required:true) %>
                  </div>

                  <div class="form-group">
                    <label class=" form-control-label">Pos-el Sekolah</label>
                    <%= form.email_field :email, placeholder:"Pos-el Sekolah", class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <label class=" form-control-label">Username</label>
                    <%= form.text_field :username, required:true, placeholder:"Username", autocomplete:"off", class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <label class=" form-control-label">Password</label>
                    <%= form.password_field :password, minlength:6, min:6, required:true, placeholder:"Password", autocomplete:"off", class:"form-control" %>
                  </div>
                  
                  <%= form.submit "Kirim", class:"btn btn-primary" %>
                <% end %>   
              </div>
          </div> <!-- .card -->

        </div><!--/.col-->


      </div>


  </div><!-- .animated -->
</div><!-- .content -->