                        <th>No</th>
                        <th>Nama</th>
                        <th>Guru PNS</th>
                        <th>Guru Non PNS</th>
                        <th>Guru PNS Akan Habis Masa Tugas</th>
                        <th>Guru Non PNS Akan Habis Masa Tugas</th>
                        <th>Guru PNS Habis Masa Tugas</th>
                        <th>Guru Non PNS Habis Masa Tugas</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @schools.each_with_index do |school,index| %>
                      <tr>
                        <td><%=index+1 %></td>
                        <td><%= school.name %></td>
                        <td><%= school.count_pns %></td>
                        <td><%= school.count_non_pns  %></td>
                        <td><%= school.count_pns_will_expire %></td>
                        <td><%= school.count_non_pns_will_expire %></td>
                        <td><%= school.count_pns_expire %></td>
                        <td><%= school.count_non_pns_expire %></td>
                        <td>
                        <%= link_to "Tampilkan", school_path(school), target:"_blank", class:"btn btn-primary" %>
                        </td>
                      </tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>


        </div>
    </div><!-- .animated -->
