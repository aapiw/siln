<%#= render "layouts/filters", school: @school %>

<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">DAFTAR Sekolah</strong>
                </div>
                <div class="card-body">
                  <table id="bootstrap-data-table" class="table table-striped table-bordered">
                    <thead>
                      <tr>
                     <!-- No
Nama Sekolah
Negara
Guru PNS {count}
Guru Non PNS {count}
Guru PNS Akan Habis Masa Tugas {count}
Guru Non PNS Akan Habis Masa Tugas {count}
